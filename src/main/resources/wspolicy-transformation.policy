<?xml version="1.0" encoding="UTF-8" ?>
<wsp:Policy Name="wspolicy_transformation"  xmlns:wsp="http://www.w3.org/ns/ws-policy">
    <wsp:ExactlyOne>
        <wsp:All>
            <tpa:Transformation xmlns:tpa="http://types.talend.com/policy/assertion/1.0" 
                path="urlOrPathToXSLTFileAppliedToMessages"
                appliesTo="provider"
                message="response"
                type="xslt"/>
        </wsp:All>
    </wsp:ExactlyOne>
</wsp:Policy>